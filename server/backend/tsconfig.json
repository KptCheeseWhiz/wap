{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./out",
    "typeRoots": ["./@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": true
  }
}
