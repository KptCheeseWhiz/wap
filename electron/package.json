{
  "name": "wap-electron",
  "description": "web anime player electron application",
  "author": "kptcheesewhiz",
  "license": "ISC",
  "scripts": {
    "predist-electron": "shx rm -rf ./dist-electron",
    "dist-electron": "node -r ts-node/register ./scripts/download.js ./dist-electron --name=wap",
    "postdist-electron": "(shx test -d \"./out\" && shx mv ./out ./dist-electron/resources/app) || true",
    "prebuild-backend": "shx rm -rf ./src/app",
    "build-backend": "cd ../server/backend && npm run dist",
    "postbuild-backend": "shx mv ../server/backend/dist ./src/app",
    "prebuild": "shx rm -rf ./out && npm run build-backend",
    "build": "tsc",
    "postbuild": "shx cp -R package.json package-lock.json ./src/app ./out",
    "build-and-install": "npm run build && (cd ./out && npm --prod i)",
    "predist": "shx rm -rf ./dist",
    "dist": "npm run build-and-install && npm run dist-electron",
    "postdist": "shx mv ./dist-electron ./dist",
    "predist-linux": "npm run predist",
    "dist-linux": "npm run build-and-install && npm run dist-electron -- --platform=linux",
    "postdist-linux": "npm run postdist",
    "predist-win32": "npm run predist",
    "dist-win32": "npm run build-and-install && npm run dist-electron -- --platform=win32",
    "postdist-win32": "npm run postdist",
    "postinstall": "npm audit fix || true",
    "release-linux": "npm run dist-linux && mv dist wap-linux-x64 && zip -r wap-linux-x64.zip wap-linux-x64 && rm -rf wap-linux-x64",
    "release-win32": "npm run dist-win32 && mv dist wap-win32-x64 && zip -r wap-win32-x64.zip wap-win32-x64 && rm -rf wap-win32-x64",
    "just-start": "(shx test -d \"./out\" || npm run build) && electron ./out/index.js",
    "start": "npm run build && electron ./out/index.js"
  },
  "devDependencies": {
    "@electron/get": "^1.12.4",
    "@types/node": "^14.14.36",
    "@types/unzipper": "^0.10.3",
    "electron": "^12.0.2",
    "shx": "^0.3.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "unzipper": "^0.10.11",
    "yargs-parser": "^20.2.7"
  }
}
