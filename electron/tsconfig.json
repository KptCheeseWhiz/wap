{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./out",
    "typeRoots": ["./@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/app", "**/node_modules"]
}
